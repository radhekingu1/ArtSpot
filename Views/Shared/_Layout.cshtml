<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - ArtSpot</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/ArtSpot.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:opsz,wght,FILL,GRAD@20..48,100..700,0..1,-50..200" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.2/css/all.min.css" integrity="sha512-SnH5WK+bZxgPHs44uWIX+LLJAJ9/2PkPKZ5QiAj6Ta86w+fsb2TkcmfRyVX3pBnMFcV7oQPJkl9QevSCWr3W6A==" crossorigin="anonymous" referrerpolicy="no-referrer" />
</head>
<body>
    <div class="col-md-2 sidebar" style="border-right: 0.5px solid #dbdbdb">
      <div>
            
            <br />
            <a href="#">
                <span class="logo">𝕬𝖗𝖙𝕾𝖕𝖔𝖙</span> 
            </a>

            <div class="sidebar-content">
                
               
                <a href="#"> <i class="fa fa-home" aria-hidden="true"></i><span> Home</span></a>
                <a href="#" id="ai"><i class="fa-solid fa-microchip"></i></a>
                <a id="message" href="#"> <i class="fa-solid fa-envelope"></i><span> Messages</span></a>
                <a href="#"> <i class="fa fa-plus-square" aria-hidden="true"></i><span> Create</span></a>
                <a href="#"> <i class="fa fa-bell" aria-hidden="true"></i> <span>Notifications</span></a>
                
                <a href="#" id="cart"> <i class="fa-solid fa-cart-shopping"></i><span> Cart</span></a>
                <a href="#" class="login">  <i class="fa-solid fa-user"></i><span> Account</span>   </a>
            </div>
      </div>
       
    </div>

    
   

    <div class="col-md-10 main" style="border:0px solid gray">
        <div class="container">
            
            <main role="main" class="pb-3">
                @RenderBody()
            </main>
        </div>
    </div>

    
    
    

    <footer class="border-top footer text-muted">



        



    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
